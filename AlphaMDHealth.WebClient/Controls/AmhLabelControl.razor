@using Radzen
@using Radzen.Blazor
@inherits AmhBaseControl;

<AmhBaseControl @bind-ErrorMessage=@ErrorMessage
                ShowHeader=@false
                ApplyStructure=@false
                ResourceKey=@ResourceKey
                FieldType=@FieldType
                Icon=@Icon
                Source=@Source
                IsControlEnabled=@IsControlEnabled
                Options=@Options
                IsValid=@IsValid>
    <ChildControl>
        <RadzenLabel @onclick=@OnLabelClicked
                     Component=@For
                     Style=@Style
                     id=@($"{UniqueID}-{_resourceKey}-{FieldType}-lbl")
                     class=@(AppState.ClassName($"{GetStyle()} {Class}"))
                     disabled=@(!IsControlEnabled)
                     Text=@Value>
            @if (string.IsNullOrWhiteSpace(Value))
            {
                @ValueControl
            }
            else
            {
                @if (FieldType.ToString().StartsWith("Html"))
                {
                    @(new MarkupString(Value))
                }
                else
                {
                    @Value
                }
            }
        </RadzenLabel>
    </ChildControl>
</AmhBaseControl>

