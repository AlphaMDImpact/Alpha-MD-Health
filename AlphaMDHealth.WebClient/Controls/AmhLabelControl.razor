    /// Control value represents text of Label control
    /// </summary>
    [Parameter]
    public string Value
    {
        get
        {
            return _value == null || string.IsNullOrWhiteSpace(_value)
                ? _resource?.ResourceValue ?? string.Empty
                : _value;
        }
        set
        {
            if (value != _value)
            {
                _value = value;
                ValueChanged.InvokeAsync(value);
            }
        }
