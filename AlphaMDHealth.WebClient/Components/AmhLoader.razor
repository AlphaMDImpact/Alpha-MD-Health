@namespace AlphaMDHealth.WebClient
@if (IsLoading)
{
    <div class="d-flex justify-content-center align-content-center" style="width:100%; height:100%; position:fixed; top:0;left:0 ; background: rgba(0, 0, 0, 0.3); z-index:2001;">
        <div class="spinner-border text-primary align-self-center" style="width: 3rem; height: 3rem;" role="status">
            <div class="spinner-grow text-primary align-self-center" style="width: 2rem; height: 2rem;" role="status">
                <span class="sr-only"></span>
            </div>
        </div>
    </div>
}


@code{
    public bool IsLoading;

    protected override void OnInitialized()
    {
        AppState.Loader = this;
    }

    public void ShowLoader(bool showLoading)
    {
        IsLoading = showLoading;
        StateHasChanged();
    }
}
