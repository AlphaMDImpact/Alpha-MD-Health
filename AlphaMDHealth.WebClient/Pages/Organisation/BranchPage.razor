@namespace AlphaMDHealth.WebClient
@inherits BasePage
@page "/BranchView"

@if (_isDataFetched)
{
    <BasePage @bind-Error=@Error
              @bind-Success=@Success
              CurrentPage=@this
              PageTitle=@LibPermissions.GetFeatureText(AppState.MasterData.OrganisationFeatures, _isEditable ? AppPermissions.BranchAddEdit.ToString() : AppPermissions.BranchView.ToString())
              OnClose=@OnClose
              PageResources=@_branchData.Resources
              RegisterComp=@RegisterControl
              ApplyFixedFooter=true
              ApplyCard=true
              ShowDetailPage=@ShowDetailPage
              IsAccordion=@IsAccordion
              PageOperation=@GetPageOperationType(_isEditable, BranchId == 0)>
        <ChildContent>
            @if (_branchData.ErrCode == ErrorCode.OK)
            {
                <AmhLanguageTabControl LanguageTabData=@_dataFormatter
                                       DataSource=@_branchData.Branches
                                       DataSourceType=@BranchModel
                                       IsControlEnabled=@_isEditable />
                @if (_branchData.Departments?.Count > 0)
                {
                    <AmhCheckBoxListControl @bind-Options=@_departments
                                            IsControlEnabled=@_isEditable
                                            ResourceKey=@ResourceConstants.R_DEPARTEMENTS_TEXT_KEY />
                }
            }
            else
            {
                <AmhMessageControl ResourceKey=@_branchData.ErrCode.ToString() />
            }
        </ChildContent>
        <PageFooter>
            @if (_branchData.Branch.BranchID > 0 && LibPermissions.HasPermission(_branchData.FeaturePermissions, AppPermissions.BranchDelete.ToString()))
            {
                <AmhButtonControl ResourceKey=@ResourceConstants.R_DELETE_ACTION_KEY OnValueChanged=@OnRemoveClick />
                <AmhMessageControl ResourceKey=@ResourceConstants.R_DELETE_CONFIRMATION_KEY
                                   Actions=@_actionData
                                   ShowHidePopup=@_hideDeletedConfirmationPopup
                                   OnValueChanged=@OnActionClickAsync />
            }
            @if (_isEditable)
            {
                <AmhButtonControl ResourceKey=@ResourceConstants.R_SAVE_ACTION_KEY OnValueChanged=@OnSaveButtonClickedAsync />
                <AmhButtonControl ResourceKey=@ResourceConstants.R_CANCEL_ACTION_KEY OnValueChanged=@OnCanceledClickAsync />
            }         
        </PageFooter>
    </BasePage>
}