@namespace AlphaMDHealth.WebClient
@inherits BasePage

@if (_isDataFetched)
{
    <BasePage @bind-Error=@Error
              @bind-Success=@Success
              CurrentPage=@this
              PageOperation=@GetPageOperationType(_isEditable, InstructionID == 0)
              PageTitle=@LibPermissions.GetFeatureText(AppState.MasterData.OrganisationFeatures, AppPermissions.InstructionAddEdit.ToString())
              OnClose=@OnClose
              PageResources=@_programData.Resources
              ApplyFixedFooter=true
              ApplyStructure=true
              ApplyCard=true
              IsAccordion=@IsAccordion
              ShowDetailPage=@ShowDetailPage
              RegisterComp=@RegisterControl>
        <ChildContent>
            <AmhLanguageTabControl LanguageTabData=@DataFormatter
                                   DataSource=@_programData.LanguageDetails
                                   DataSourceType=@ProgramDetails
                                   IsControlEnabled=@_isEditable />
        </ChildContent>
        <PageFooter>
            @if (LibPermissions.HasPermission(_programData.FeaturePermissions, AppPermissions.InstructionDelete.ToString()) && InstructionID > 0)
            {
                <AmhButtonControl Class="mt3" ResourceKey=@ResourceConstants.R_DELETE_ACTION_KEY
                                  OnValueChanged=@OnRemoveClick />

                <AmhMessageControl Class="mt3" ResourceKey=@ResourceConstants.R_DELETE_CONFIRMATION_KEY
                                   ShowHidePopup=@_hideDeletedConfirmationPopup
                                   Actions=@_popupActions
                                   OnValueChanged=@OnActionClickedAsync ContentClass="top-center"/>
            }
            @if (_isEditable)
            {
                <AmhButtonControl Class="mt3" ResourceKey=@ResourceConstants.R_SAVE_ACTION_KEY
                                  OnValueChanged=@OnSaveButtonClickedAsync />
            }
            <AmhButtonControl Class="mt3" ResourceKey=@ResourceConstants.R_CANCEL_ACTION_KEY
                              OnValueChanged=OnCancelClickedAsync />
        </PageFooter>
    </BasePage>
}