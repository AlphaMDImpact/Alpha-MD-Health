@namespace AlphaMDHealth.WebClient
@inherits BasePage

@if (_isDataFetched)
{
    <BasePage @bind-Error=@Error
              @bind-Success=@Success
              CurrentPage=@this
              IsAccordion=@IsAccordion
              PageTitle=@LibPermissions.GetFeatureText(AppState.MasterData.OrganisationFeatures, AppPermissions.ProgramTaskAddEdit.ToString())
              RegisterComp=@RegisterControl
              PageResources=@_programData.Resources
              OnClose=@OnClose
              ApplyFixedFooter=true
              ApplyCard=true
              PageOperation=@GetPageOperationType(_isEditable, _programData.Task.ProgramTaskID == 0)>
        <ChildContent>
            <AmhDropdownControl @bind-Options=@_programData.Items
                                ResourceKey=@ResourceConstants.R_TASK_TYPE_NAME_KEY
                                IsControlEnabled=@_isEditable
                                OnValueChanged=@OnTaskChanged />
            <span class="mt-1"></span>
            <AmhLabelControl FieldType=@FieldTypes.PrimarySmallHStartVCenterBoldLabelControl
                             ResourceKey=@ResourceConstants.R_TASK_TYPE_KEY />
            <AmhLabelControl Value=@(string.IsNullOrWhiteSpace(_selectedTask.TaskType) ? Constants.SYMBOL_DOUBLE_HYPHEN : _selectedTask.TaskType) />

            <AmhLabelControl FieldType=@FieldTypes.PrimarySmallHStartVCenterBoldLabelControl
                             ResourceKey=@ResourceConstants.R_ITEM_KEY />
            <AmhLabelControl Value=@(string.IsNullOrWhiteSpace(_selectedTask.SelectedItemName) ? Constants.SYMBOL_DOUBLE_HYPHEN : _selectedTask.SelectedItemName) />

            <AmhLabelControl FieldType=@FieldTypes.PrimarySmallHStartVCenterBoldLabelControl
                             ResourceKey=@ResourceConstants.R_NUMBER_OF_SUBFLOWS_KEY />
            <AmhLabelControl Value=@(_selectedTask.NoOfSubflows < 1 ? Constants.SYMBOL_DOUBLE_HYPHEN : _selectedTask.NoOfSubflows.ToString()) />

            <AmhNumericEntryControl @bind-Value=@_assignAfterDays
                                    ResourceKey=@ResourceConstants.R_ASSIGN_AFTER_DAYS_KEY
                                    IsControlEnabled=@_isEditable />

            <AmhNumericEntryControl @bind-Value=@_assignForDays
                                    ResourceKey=@ResourceConstants.R_SHOW_FOR_DAYS_KEY
                                    IsControlEnabled=@_isEditable />

            <AmhCheckBoxListControl ShowHeader=@false
                                    ResourceKey=@ResourceConstants.R_EXECUTE_ON_LOGIN_KEY
                                    Options=@GetOptions()
                                    ValueChanged=@(e => { _executeOnLogin = !string.IsNullOrWhiteSpace(e) && Convert.ToInt32(e) == 1; })
                                    IsControlEnabled=@_isEditable />

        </ChildContent>
        <PageFooter>
                @if (_programData.Task.ProgramTaskID != 0 && LibPermissions.HasPermission(_programData.FeaturePermissions, AppPermissions.ProgramTaskDelete.ToString()) && _isEditable)
                {
                    <AmhButtonControl  ResourceKey=@ResourceConstants.R_DELETE_ACTION_KEY OnValueChanged=@OnRemoveClick />

                    <AmhMessageControl ResourceKey=@ResourceConstants.R_DELETE_CONFIRMATION_KEY
                                       Actions=@_actionData
                                       ShowHidePopup=@_hideConfirmationPopup
                                       OnValueChanged=@DeletePopUpCallbackAsync />
                }
                @if (_isEditable)
                {
                    <AmhButtonControl ResourceKey=@ResourceConstants.R_SAVE_ACTION_KEY OnValueChanged=@OnSaveButtonClickedAsync />
                }
                <AmhButtonControl ResourceKey=@ResourceConstants.R_CANCEL_ACTION_KEY OnValueChanged=@OnCancelClick />
        </PageFooter>
    </BasePage>
}