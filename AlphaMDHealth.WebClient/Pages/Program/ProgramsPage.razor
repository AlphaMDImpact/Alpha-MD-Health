@namespace AlphaMDHealth.WebClient
@inherits BasePage
@page "/ProgramsView"
@page "/ProgramsView/{programid:long}"

@if (_isDataFetched)
{
    <BasePage @bind-Error=@Error
              @bind-Success=@Success
              @bind-ShowDetailPage=@ShowDetailPage
              CurrentPage=@this
              PageResources=@_programData.Resources
              ApplyStructure=@(_programData.RecordCount == 0)
              ApplyParentStructure=@(!ShowDetailPage)
              ApplyCard=true
              ShowPageTitle=@(_programData.ErrCode != ErrorCode.OK)>
        <ChildContent>
            @if (ShowDetailPage)
            {
                if (_shouldShowSubscribedPopUp)
                {
                    <ProgramsSubscriptionPage
                                     ShowDetailPage=true
                                     OnClose=@OnProgramSubscribePageClosedAsync />
                }
                else
                {
                    <ProgramPage ProgramID=@_programID
                                 ShowDetailPage=true
                                 OnClose=@OnAddEditPageClosedAsync />
                }
            }
            else
            {
                @if (_programData.ErrCode == ErrorCode.OK)
                {
                    <AmhTableControl TableHeader=@LibPermissions.GetFeatureText(AppState.MasterData.OrganisationFeatures, AppPermissions.ProgramsView.ToString())
                                     DataSource=@_programData.Programs
                                     DataSourceType=@ProgramModel
                                     TableStructure=@GenerateTableStructure()
                                     ShowSearch=@(_programData.RecordCount < 1)
                                     ShowViewAll=@(_programData.RecordCount > 0)
                                     ShowAddButton=@(_programData.RecordCount == 0 && LibPermissions.HasPermission(_programData.FeaturePermissions,AppPermissions.ProgramAddEdit.ToString()))
                                     OnValueChanged=@(async (e) => await OnAddEditClickedAsync((ProgramModel)e))
                                     OnViewClicked=@OnViewAllClickedAsync
                                     ActionButtons=@_actionButtons
                                     ShowPagination=@(_programData.RecordCount < 1) />
                }
                else
                {
                    <AmhMessageControl ResourceKey=@_programData.ErrCode.ToString() />
                }
            }
        </ChildContent>
    </BasePage>
}