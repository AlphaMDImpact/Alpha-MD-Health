@namespace AlphaMDHealth.WebClient
@inherits BasePage

@if (_isDataFetched)
{
    <BasePage @bind-Error=@Error @bind-Success=@Success
              CurrentPage=@this
              PageTitle=@LibPermissions.GetFeatureText(AppState.MasterData.OrganisationFeatures, AppPermissions.PatientProgramAddEdit.ToString())
              OnClose=@OnClose
              PageResources=@_patientProgramData?.Resources
              RegisterComp=@RegisterControl
               ApplyFixedFooter=true
              ApplyCard=true
              IsAccordion=@IsAccordion
              ShowDetailPage=@ShowDetailPage
              PageOperation=@GetPageOperationType(_isEditable, PatientProgramID == 0)>
        <ChildContent>
            <AmhDropdownControl @bind-Options=@_patientProgramData.OrganizationPrograms
                                ResourceKey=@ResourceConstants.R_SELECT_PROGRAM_KEY
                                IsControlEnabled=@(_isEditable && PatientProgramID == 0)
                                OnValueChanged=@(e => { OnProgramSelectionChange(e); }) />

            <AmhDropdownControl @bind-Options=@_patientProgramData.EndPointTypes
                                ResourceKey=@ResourceConstants.R_END_POINT_TYPE_KEY
                                OnValueChanged=@(e => { OnEndPointSelectionChange(e); })
                                IsControlEnabled=@_isEditable />

            @if (_patientProgramData.PatientProgram?.EntryTypeID == ResourceConstants.R_TRACKER_OPTION_ID)
            {
                <AmhDropdownControl @bind-Options=@_trackerTypeOptionList
                                    ResourceKey=@ResourceConstants.R_PATIENT_PROGRAM_TRACKER_KEY
                                    IsControlEnabled=@_isEditable />
            }
            @if (_patientProgramData.PatientProgram?.EntryTypeID == ResourceConstants.R_DATE_OPTION_ID
           || _patientProgramData.PatientProgram?.EntryTypeID == ResourceConstants.R_TRACKER_OPTION_ID)
            {
                <AmhDateTimeControl @bind-Value=@_patientProgramData.PatientProgram.EntryDate
                                    ResourceKey=@ResourceConstants.R_PATIENT_PROGRAM_DATE_KEY
                                    IsControlEnabled=@_isEditable />
            }
            @if (_patientProgramData.PatientProgram?.EntryTypeID == ResourceConstants.R_DAY_OPTION_ID)
            {
                <AmhNumericEntryControl @bind-Value=@_days
                                        ResourceKey=@ResourceConstants.R_PATIENT_PROGRAM_DAYS_KEY
                                        IsControlEnabled=@_isEditable />
            }
        </ChildContent>
        <PageFooter>
            @if (PatientProgramID > 0 && LibPermissions.HasPermission(_patientProgramData.FeaturePermissions, AppPermissions.PatientProgramDelete.ToString()))
            {
                <AmhButtonControl ResourceKey=@ResourceConstants.R_DELETE_ACTION_KEY
                                  OnValueChanged=@OnDeleteButtonClicked />
            }
            @if (_isEditable)
            {
                <AmhButtonControl ResourceKey=@ResourceConstants.R_SAVE_ACTION_KEY
                                  OnValueChanged=@OnSaveButtonClickedAsync />
            }

            <AmhMessageControl ResourceKey=@(_isSaveButtonClicked ? ResourceConstants.R_SAVE_POPUP_WARNING_KEY : ResourceConstants.R_DELETE_CONFIRMATION_KEY)
                               ShowHidePopup=@_hideConfirmationPopup
                               Actions=@_actionData
                               OnValueChanged=@OnConfirmationPopUpClickedAsync />

            <AmhButtonControl ResourceKey=@ResourceConstants.R_CANCEL_ACTION_KEY
                              OnValueChanged=@OnCancelClickedAsync />
        </PageFooter>
    </BasePage>
}