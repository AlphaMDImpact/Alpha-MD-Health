@namespace AlphaMDHealth.WebClient
@inherits BasePage

@if (_isDataFetched)
{
    <BasePage @bind-Error=@Error
              @bind-Success=@Success
              CurrentPage=@this
              PageTitle=@LibPermissions.GetFeatureText(AppState.MasterData.OrganisationFeatures, AppPermissions.ProgramServiceAddEdit.ToString())
              PageOperation=@GetPageOperationType(_isEditable, _programData.ProgramService.ProgramExternalServiceID == 0) 
              PageResources=@_programData?.Resources
              OnClose=@OnClose
              IsAccordion=@IsAccordion
              ApplyFixedFooter=true
              ApplyCard=true
              RegisterComp=@RegisterControl>
        <ChildContent>
            <AmhDropdownControl @bind-Options=@_programData.Items
                                ResourceKey=@ResourceConstants.R_SERVICE_NAME_KEY
                                IsControlEnabled=@_isEditable />

            <AmhNumericEntryControl @bind-Value=@_quantity
                                    ResourceKey=@ResourceConstants.R_NO_OF_SCANS_KEY />

            <AmhNumericEntryControl @bind-Value=@_assignAfterDays
                                    ResourceKey=@ResourceConstants.R_ASSIGN_AFTER_DAYS_KEY
                                    IsControlEnabled=@_isEditable />

            <AmhNumericEntryControl @bind-Value=@_assignForDays
                                    ResourceKey=@ResourceConstants.R_SHOW_FOR_DAYS_KEY
                                    IsControlEnabled=@_isEditable />
        </ChildContent>
        <PageFooter>
            @if (_programData.ProgramService.ProgramExternalServiceID > 0 && LibPermissions.HasPermission(_programData.FeaturePermissions, AppPermissions.ProgramServiceDelete.ToString()) && _isEditable)
            {
                <AmhButtonControl Class="mt-3" ResourceKey=@ResourceConstants.R_DELETE_ACTION_KEY OnValueChanged=@OnRemoveClick />
                <AmhMessageControl Class="mt-3" ResourceKey=@ResourceConstants.R_DELETE_CONFIRMATION_KEY
                                   ShowHidePopup=@_hideConfirmationPopup
                                   Actions=@_actionData
                                   OnValueChanged=@DeletePopUpCallbackAsync />
            }
            @if (_isEditable)
            {
                <AmhButtonControl Class="mt-3" ResourceKey=@ResourceConstants.R_SAVE_ACTION_KEY OnValueChanged=OnSaveButtonClickedAsync />
            }
            <AmhButtonControl Class="mt-3" ResourceKey=@ResourceConstants.R_CANCEL_ACTION_KEY OnValueChanged=@OnCancelClick />
        </PageFooter>
    </BasePage>
}
